<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/busLogo"
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_directions_bus_24" />

                <TextView
                    android:id="@+id/header_bus"
                    android:layout_below="@id/busLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER lOG IN" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/header_bus"
                    android:id="@+id/vehicleVerificationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:text="Vehicle Registration Number" />

                <EditText
                    android:id="@+id/loginVehicleVerificationET"
                    android:layout_below="@+id/vehicleVerificationLabel"
                    android:layout_width="328dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textview_border"
                    android:hint="eg. GT-1244-21"
                    android:inputType="text"
                    android:padding="15dp" />


                <TextView
                    android:id="@+id/passwordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginVehicleVerificationET"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Password"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/loginPasswordET"
                    android:layout_width="328dp"
                    android:layout_height="56dp"
                    android:layout_below="@+id/passwordLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textview_border"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:padding="15dp" />


                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginPasswordET"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/black_round_button"
                    android:text="NEXT" />

                <TextView
                    android:id="@+id/registerBtn"
                    android:layout_below="@+id/loginBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Your Bus here"
                    android:textColor="#2196F3"/>

            </RelativeLayout>






    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>