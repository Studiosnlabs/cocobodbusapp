    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver_schedule">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Container">

        <include android:id="@+id/driverToolbar" layout="@layout/snippet_top_toolbar"></include>

        <TextView
            android:id="@+id/Welcome"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverToolbar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:text="Welcome," />

        <TextView
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Welcome"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Mr.Kwabena Ntim" />

        <TextView
            android:id="@+id/instruction"
            android:fontFamily="@font/poppinsregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverName"
            android:layout_marginLeft="25dp"
            android:text="Please select your available times" />

        <TextView
            android:id="@+id/allWeekLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instruction"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:text="All Week" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/allWeekSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allWeekLabel"
            android:layout_alignParentEnd="true"
            android:textOff="off"
            android:textOn="on"
            app:showText="true" />

        <ScrollView
            android:layout_below="@+id/allWeekSwitch"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/cardsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/mondayCard"
            android:layout_width="323dp"
            android:layout_height="103dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mondayItemContainer">

                <RelativeLayout
                    android:id="@+id/Monday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/daylabelbg">

                    <TextView
                        android:fontFamily="@font/poppinsbold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="MON"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mondayDateContainer"
                    android:layout_width="214dp"
                    android:layout_height="20dp"
                    android:background="@drawable/datelabelbg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/mondayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="14TH FEBRUARY 2022"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="63dp"
                    android:id="@+id/morningSwitchContainer"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mondayDateContainer"
                    android:layout_alignStart="@id/mondayDateContainer"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/morningSwitchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MORNING"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/mondayMorningSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/morningSwitchLabel"
                        android:textOff="off"
                        android:shadowColor="#FF5722"
                        android:textOn="on"
                        app:showText="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="63dp"
                    android:id="@+id/eveningSwitchContainer"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mondayDateContainer"
                    android:layout_alignEnd="@id/mondayDateContainer"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/mondayEveningSwitchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EVENING"
                        android:textSize="10sp"
                        android:textColor="@color/black" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
